# 資料庫環境配置模板
# 複製此檔案為 .env 並填入實際值

# 預設資料庫環境 (local/remote)
DB_ENVIRONMENT=local

# 本地資料庫設定
LOCAL_DB_HOST=localhost
LOCAL_DB_PORT=5432
LOCAL_DB_NAME=988
LOCAL_DB_USER=postgres
LOCAL_DB_PASSWORD=your_local_password

# 遠端資料庫設定
REMOTE_DB_HOST=your_remote_host
REMOTE_DB_PORT=5432
REMOTE_DB_NAME=988
REMOTE_DB_USER=your_remote_user
REMOTE_DB_PASSWORD=your_remote_password

# 應用程式設定
APP_DEBUG=false
APP_PORT=8050

# 日誌設定
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log

# API Key 設定
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL_NAME=gpt-5-mini
LLM_KEYWORD_MODEL=gpt-5-mini
LLM_VALIDATION_MODEL=gpt-5-nano